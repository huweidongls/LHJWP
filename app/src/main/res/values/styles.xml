<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--顶部bar样式
    <RelativeLayout-->
    <style name="rl_top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:background">#009EFF</item>
    </style>
    <!--顶部标题样式-->
    <style name="tv_top_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36px</item>
        <item name="android:textColor">@color/white_ffffff</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
