<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="12px"
    android:layout_marginBottom="12px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/activity_create_intercalation_rv_rl_add"
        android:layout_width="226px"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/add_pic"
            android:layout_width="226px"
            android:layout_height="226px" />


    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/activity_create_intercalation_rv_rl_img"
        android:layout_centerHorizontal="true"
        android:layout_width="226px"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_create_intercalation_rv_iv_img"
            android:scaleType="centerCrop"
            android:layout_width="226px"
            android:layout_height="226px" />

        <ImageView
            android:id="@+id/iv_sure"
            android:layout_marginRight="10px"
            android:layout_marginTop="10px"
            android:layout_alignParentRight="true"
            android:src="@drawable/sure_kong"
            android:layout_width="44px"
            android:layout_height="44px" />

        <TextView
            android:id="@+id/tv_time"
            android:textColor="@color/black_333333"
            android:textSize="28px"
            android:layout_marginTop="6px"
            android:layout_below="@+id/activity_create_intercalation_rv_iv_img"
            android:text="10-08 13:38:17"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
