<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jingna.lhjwp.activity.ProfessionalLoginActivity">

    <ImageView
        android:src="@drawable/login_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_set_ip"
        android:layout_marginTop="65px"
        android:layout_marginRight="30px"
        android:layout_alignParentRight="true"
        android:src="@drawable/set"
        android:layout_width="50px"
        android:layout_height="50px" />

    <ImageView
        android:id="@+id/iv_y"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170px"
        android:src="@drawable/y"
        android:layout_width="188px"
        android:layout_height="188px" />

    <TextView
        android:id="@+id/tv_lhjwp"
        android:layout_marginTop="13px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_y"
        android:textColor="@color/white_ffffff"
        android:textSize="36px"
        android:text="龙浩经纬拍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_marginTop="88px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_below="@+id/tv_lhjwp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_name"
            android:textColorHint="@color/white_ffffff"
            android:textColor="@color/white_ffffff"
            android:textSize="28px"
            android:hint="请输入用户名"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="32px"
            android:background="@color/white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_marginTop="49px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_below="@+id/ll1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="textPassword"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/iv_is_kejian"
                android:layout_centerVertical="true"
                android:id="@+id/et_pwd"
                android:textColorHint="@color/white_ffffff"
                android:textColor="@color/white_ffffff"
                android:textSize="28px"
                android:hint="请输入密码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_is_kejian"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bukejian"
                android:layout_width="50px"
                android:layout_height="36px" />

        </RelativeLayout>

        <View
            android:layout_marginTop="32px"
            android:background="@color/white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:id="@+id/ll_jizhu"
            android:layout_gravity="right"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_jizhu"
                android:layout_gravity="center_vertical"
                android:src="@drawable/jizhu_kong"
                android:layout_width="32px"
                android:layout_height="32px" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12px"
                android:textColor="@color/white_ffffff"
                android:textSize="28px"
                android:text="记住密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    
    <Button
        android:id="@+id/btn_login"
        android:background="@drawable/bg_type_button"
        android:layout_marginTop="120px"
        android:layout_marginRight="107px"
        android:layout_marginLeft="107px"
        android:layout_below="@+id/ll2"
        android:textSize="32px"
        android:textColor="@color/white_ffffff"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="80px" />

    <TextView
        android:layout_marginBottom="50px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white_ffffff"
        android:textSize="28px"
        android:text="哈尔滨市龙浩信息科技开发有限公司"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--<TextView-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginBottom="12px"-->
        <!--android:layout_above="@+id/tv1"-->
        <!--android:textSize="28px"-->
        <!--android:textColor="@color/white_ffffff"-->
        <!--android:text="哈尔滨市龙浩信息科技开发有限公司"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

</RelativeLayout>
