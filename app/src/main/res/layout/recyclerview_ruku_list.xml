<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="158px">

    <ImageView
        android:id="@+id/iv"
        android:layout_marginLeft="32px"
        android:layout_centerVertical="true"
        android:src="@drawable/lou"
        android:layout_width="126px"
        android:layout_height="126px" />
    
    <ImageView
        android:id="@+id/iv_right"
        android:layout_marginRight="32px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/right"
        android:layout_width="20px"
        android:layout_height="34px" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_toLeftOf="@+id/iv_right"
        android:layout_toRightOf="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:layout_marginTop="28px"
            android:textColor="#22283B"
            android:textSize="36px"
            android:text="某某小区"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_marginTop="12px"
            android:layout_below="@+id/tv_title"
            android:textColor="#007AFF"
            android:textSize="28px"
            android:text="已采集"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tv_address"
            android:layout_marginLeft="36px"
            android:layout_toRightOf="@+id/tv_type"
            android:layout_alignBottom="@+id/tv_type"
            android:textColor="#686C7A"
            android:textSize="28px"
            android:text="某某区某某路某某号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <View
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/rl_content"
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="4px"/>

</RelativeLayout>
