<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F5F6"
    tools:context="com.jingna.lhjwp.activity.ProfessionalActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <TextView
            android:text="龙浩经纬拍"
            style="@style/tv_top_title" />
        
        <RelativeLayout
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/person"
                android:layout_width="68px"
                android:layout_height="68px" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108px">

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#545658"
            android:textSize="32px"
            android:text="采集任务最后更新时间：10-09 14:11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:background="@color/white_ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="226px">

        <ImageView
            android:layout_marginLeft="56px"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/ll1"
            android:layout_width="120px"
            android:layout_height="106px" />

        <LinearLayout
            android:layout_marginTop="36px"
            android:layout_marginLeft="50px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="#545658"
                android:textSize="36px"
                android:text="入库项目采集"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="12px"
                android:textColor="#7D7C7C"
                android:textSize="28px"
                android:text="投 资：08.09~10.09 完成：1/3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="12px"
                android:textColor="#7D7C7C"
                android:textSize="28px"
                android:text="房地产：08.09~10.09 完成：1/3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12px"
        android:background="@color/white_ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="226px">

        <ImageView
            android:layout_marginLeft="56px"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/ll2"
            android:layout_width="120px"
            android:layout_height="106px" />

        <LinearLayout
            android:layout_marginTop="36px"
            android:layout_marginLeft="50px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="#545658"
                android:textSize="36px"
                android:text="进度项目采集"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="12px"
                android:textColor="#7D7C7C"
                android:textSize="28px"
                android:text="投 资：08.09~10.09 完成：1/3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="12px"
                android:textColor="#7D7C7C"
                android:textSize="28px"
                android:text="房地产：08.09~10.09 完成：1/3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12px"
        android:background="@color/white_ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="226px">

        <ImageView
            android:layout_marginLeft="56px"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/ll3"
            android:layout_width="120px"
            android:layout_height="106px" />

        <LinearLayout
            android:layout_marginTop="36px"
            android:layout_marginLeft="50px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="#545658"
                android:textSize="36px"
                android:text="变更项目采集"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="12px"
                android:textColor="#7D7C7C"
                android:textSize="28px"
                android:text="未发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12px"
        android:background="@color/white_ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="226px">

        <ImageView
            android:layout_marginLeft="56px"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/ll4"
            android:layout_width="120px"
            android:layout_height="106px" />

        <LinearLayout
            android:layout_marginTop="36px"
            android:layout_marginLeft="50px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="#545658"
                android:textSize="36px"
                android:text="竣工项目采集"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="12px"
                android:textColor="#7D7C7C"
                android:textSize="28px"
                android:text="未发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
