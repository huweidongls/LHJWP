<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_edit"
        android:layout_width="104px"
        android:layout_height="160px">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_sure"
            android:src="@drawable/sure_kong"
            android:layout_width="44px"
            android:layout_height="44px" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/selector_list_bg"
        android:id="@+id/rl"
        android:layout_toRightOf="@+id/rl_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_marginLeft="32px"
            android:layout_marginBottom="19px"
            android:layout_marginTop="19px"
            android:src="@drawable/youtu"
            android:layout_width="111px"
            android:layout_height="111px" />

        <LinearLayout
            android:id="@+id/ll"
            android:orientation="vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_toRightOf="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="28px"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv1"
                    android:textColor="#000000"
                    android:textSize="36px"
                    android:text="某某小区"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_edit"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/edit_b"
                    android:layout_width="32px"
                    android:layout_height="30px" />
                
            </LinearLayout>

            <TextView
                android:gravity="bottom"
                android:id="@+id/tv2"
                android:layout_marginTop="12px"
                android:textColor="#9B9B9B"
                android:textSize="28px"
                android:text="采集时间：10-08 16:33:03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_marginBottom="8px"
            android:layout_alignBottom="@+id/ll"
            android:id="@+id/iv_right"
            android:layout_marginRight="32px"
            android:layout_alignParentRight="true"
            android:src="@drawable/right"
            android:layout_width="17px"
            android:layout_height="28px" />
        
        <RelativeLayout
            android:id="@+id/rl_num"
            android:layout_marginTop="28px"
            android:background="@drawable/bg_shape_blue"
            android:layout_marginRight="32px"
            android:layout_alignParentRight="true"
            android:layout_width="31px"
            android:layout_height="31px">

            <TextView
                android:id="@+id/tv_num"
                android:layout_centerInParent="true"
                android:textSize="17px"
                android:textColor="@color/white_ffffff"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        
        <View
            android:layout_alignLeft="@+id/ll"
            android:layout_below="@+id/iv"
            android:background="#E6E6E6"
            android:layout_width="match_parent"
            android:layout_height="2px"/>

    </RelativeLayout>

</RelativeLayout>
